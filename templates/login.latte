<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Artisian Heritage-login </title>
    <link rel=" icon" href="/assets/logo.png" type="image/x-icon">
    <link rel="stylesheet" href='/assets/styles.css'>
</head>
<body class="auth login">
<div class="loginbox">
    <div class="loginimg">
        <img src="/assets/login-pic.png" alt="Books">
    </div>
    <div class="loginform-section">

        <form class="auth-form" method="post">
            <div class="loginform-group">
                <label for="email" class="block">Email Address</label>
                <input type="text" id="email" name="email" placeholder="Enter email" required autofocus>
                <small id="emailError" class="error-message"></small>
            </div>

            <div class="loginform-group">
                <label for="password" class="block">Password</label>
                <input type="password" id="password" placeholder="Enter password" min="8" max="10" name="password" required>
                <small id="passwordError" class="error-message"></small>
            </div>


            <button type="submit" class="btn-border">Login</button>
        </form>
        <div class="error-message">{$message}</div>
        <div class="loginregister">
            Donâ€™t have an account? <a href="/register" class="btn-border">Register</a>
        </div>
    </div>
</div>
<script>
    document.addEventListener("DOMContentLoaded", function() {
        document.querySelector("form").addEventListener("submit", function(event) {
            let email = document.getElementById("email").value.trim();
            let password = document.getElementById("password").value.trim();
            let emailError = document.getElementById("emailError");
            let passwordError = document.getElementById("passwordError");

            let isValid = true;

            // Reset errors
            emailError.innerText = "";
            passwordError.innerText = "";

            // Email validation
            let emailPattern = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            if (!emailPattern.test(email)) {
                emailError.innerText = "Please enter a valid email address.";
                isValid = false;
            }

            // Password validation (min 8 characters)
            if (password.length < 8) {
                passwordError.innerText = "Password must be at least 8 characters long.";
                isValid = false;
            }

            // Prevent form submission if validation fails
            if (!isValid) {
                event.preventDefault();
            }
        });
    });
</script>

</body>
</html>