<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Artisan Heritage</title>
    <link rel="icon" href="/assets/logo.png" type="image/x-icon">
    <link rel="stylesheet" href='/assets/styles.css'>
</head>
<body class="auth regis">
<div class="regisadd">
    <div class="regisimg">
        <img src="/assets/regis-pic.png" alt="Artisan Heritage Image">
    </div>
    <div class="regisform">
        <form id="registration-form" class="auth-form" method="POST" onsubmit="validateForm(event)">
            <div class="regisform-group">
                <label for="first-name">First Name</label>
                <input type="text" id="first-name" placeholder="Enter first name" name="firstName" pattern="[A-Za-z]+" required>
            </div>
            <div class="regisform-group">
                <label for="last-name">Last Name</label>
                <input type="text" id="last-name" placeholder="Enter last name" name="lastName" pattern="[A-Za-z]+" required>
            </div>
            <div class="regisform-group">
                <label for="email">Email</label>
                <input type="email" id="email" placeholder="Enter email" name="email"  required>
            </div>
            <div class="regisform-group">
                <label for="password">Password</label>
                <input type="password" id="password" placeholder="Enter password" name="password" minlength="8" maxlength="10" required>
            </div>
            <div class="regisform-group">
                <label for="confirm-password">Confirm Password</label>
                <input type="password" id="confirm-password" placeholder="Confirm Password" name="confirmPassword" minlength="8" maxlength="10" required>
            </div>
            <div class="regisform-group">
                <label for="address">Address</label>
                <input type="text" id="address" placeholder="Enter address" name="address" required>
            </div>
            <div class="regisform-group">
                <label for="contact-no">Contact No</label>
                <input type="number" id="contact-no" placeholder="Enter contact no" name="contactNo" pattern="[0-9]{11}"  required>
            </div>
            <button type="submit">Register</button>
        </form>
    </div>
<script>
    function validateForm(event) {
        event.preventDefault(); // Prevent form submission

        let password = document.getElementById("password").value;
        let confirmPassword = document.getElementById("confirm-password").value;

        if (password !== confirmPassword) {
            alert("Passwords do not match. Please re-enter.");
            return false;
        }
        // If passwords match, allow form submission
        document.getElementById("registration-form").submit();
    }
</script>
</body>
</html>
